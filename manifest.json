{
    "name": "Fairfax Paywall Bypass",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "Extension bypass / hide the Fairfax monthly article limit paywall.",
    "icons": {
        "16": "img/firewall16.png",
        "48": "img/firewall48.png",
        "128": "img/firewall128.png"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "css": [
                "css/bypass.css"
            ],
            "matches": [
                "*://*.brisbanetimes.com.au/*",
                "*://*.theage.com.au/*",
                "*://*.smh.com.au/*",
                "*://*.canberratimes.com.au/*",
                "*://*.watoday.com.au/*",
                "*://*.afr.com/*",
                "*://*.domain.com.au/*",
                "*://*.traveller.com.au/*",
                "*://*.goodfood.com.au/*",
                "*://*.executivestyle.com.au/*",
                "*://*.thestore.com.au/*",
                "*://*.drive.com.au/*",
                "*://*.adzuna.com.au/*",
                "*://*.rsvp.com.au/*",
                "*://*.essentialbaby.com.au/*",
                "*://*.weatherzone.com.au/*",
                "*://*.commercialrealestate.com.au/*",
                "*://*.oneflare.com.au/*",
                "*://*.nabo.com.au/*"
            ],
            "js": ["js/lib/jquery-3.2.1.min.js","js/bypass.js"],
            "run_at": "document_end"
        }
    ]
}
